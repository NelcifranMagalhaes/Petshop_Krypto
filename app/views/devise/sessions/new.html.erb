<div class="container-fluid form-div" >
<h2 class="h2-login">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-horizontal') do |f| %>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label"></label>
    <div class="col-sm-10">
        <%= f.input :email,
                required: true,
                autofocus: true,
                label: false,
                placeholder: 'user@domain.com',
                input_html: { autocomplete: "email" },
                class: 'form-control' %>
    </div>
    <br>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label"></label>
    <div class="col-sm-10">
        <%= f.input :password,
                required: true,
                label: false,
                placeholder: 'Sua senha',
                input_html: { autocomplete: "current-password" },
                class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.button :submit, "Log in", class: "btn btn-default" %>
      <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-default' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
</div>