<div class="container-fluid form-div" >
<h2 class="h2-login">Sign up</h2>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-horizontal') do |f| %>
    <%= f.error_notification %>
  
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label"></label>
      <div class="col-sm-10">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: false,
                    input_html: { autocomplete: "email" },
                    class: 'form-control',
                    placeholder: 'email' %>
      </div>
    <br>
    </div>

    <div class="form-group">
      <label for="inputPassword3" class="col-sm-2 control-label"></label>
      <div class="col-sm-10">
          <%= f.input :password,
                  required: true,
                  label: false,
                  placeholder: 'Sua senha',
                  input_html: { autocomplete: "new-password" },
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  class: 'form-control' %>
      </div>
      <br>
    </div>

    <div class="form-group">
      <label for="inputPassword3" class="col-sm-2 control-label"></label>
      <div class="col-sm-10">
          <%= f.input :password_confirmation,
                  required: true,
                  label: false,
                  placeholder: 'Confirme Sua senha',
                  input_html: { autocomplete: "new-password" },
                  class: 'form-control' %>
      </div>
      <br>
    </div>

    <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.button :submit, "Submit", class: "btn btn-default" %>
      <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-default' %>
      <%= link_to "Log in", new_session_path(resource_name), class: 'btn btn-default' %><br />
    </div>
  </div>
<% end %>
</div>