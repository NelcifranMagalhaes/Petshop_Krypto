<%= form_for(dog, html: { class: "form-horizonta"} ) do |f| %>
  <% if dog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(dog.errors.count, "error") %> errors :</h2>

      <ul>
      <% dog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
   <div class="col-md-8">

  <div class="form-group">
    <%= f.label :breed ,'Breed'%>
    <%= f.text_field :breed ,{ class: 'form-control' }%>
  </div>

  <div class="form-group">
    <%= f.label :genre,'Genre' %>
    <%= f.select :genre, [ "Female", "Male" ],prompt: "Select a genre" ,class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :castrated ,'Castrated'%>

    <%= f.check_box :castrated %>
  </div>

  <div class="form-group">
    <%= f.label :birthday ,'Birthday'%>
    <%= f.date_select :birthday ,class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :name ,'Name'%>
    <%= f.text_field :name ,class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :owner_name ,'Owner s name'%>
    <%= f.text_field :owner_name ,class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :owner_fone ,'Owner fone'%>
    <%= f.text_field :owner_fone ,class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :last_date ,'Last visit'%>
    <%= f.date_select :last_date ,class:"form-control"%>
  </div>

  <div class="actions">
    <%= f.submit 'Add' , :class => 'btn btn-primary btn-sm'%>
  </div>


<% end %>
</div>
</div>