<p id="notice"><%= notice %></p>
<div class="box box-default">
<div class="box-header with-border">
    <h3 class="box-title">
      <strong>
       Cachorros Cadastrados
      </strong>
    </h3>
</div>

  <div class="box-body">
    <div class="row">
    <div class="col-md-12">

  <%= form_tag(dogs_path, method: "get", class: "form-inline") do |f| %>
  <div class="row">
   <div class="col-md-12">
    <div class="form-group">

      <%=select_tag "genre", options_for_select([ "Fêmea", "Macho" ],params[:genre]),prompt: "Selecione o Gênero",class:"form-control" %>

  </div>

    <div class = "form-group">

      <%=select_tag "breed", options_for_select(@breeds,params[:breed]),prompt: "Selecione a raça",class:"form-control" %>

    </div>

    <div class="form-group">
      <%= text_field_tag :name, nil, value: params[:name], placeholder: "Nome", id: "nome" ,class:"form-control" %>
    </div>

    <div class="form-group">
      <%= select_tag :castrated,options_for_select([ "Sim", "Não" ]),prompt: "Castrado?",class:"form-control"  %>
    </div>

      <div class="form-group">
      <%= text_field_tag :owner, nil, value: params[:owner], placeholder: "dono", id: "dono" ,class:"form-control" %>
    </div>

    <div class="form-group">
      <%= submit_tag "Pesquisar",class: "btn btn-primary btn-sm"%>
    </div>


  </div>
  </div>
<% end %>
</div>
</div>

&nbsp;
<div class="row">
<div class="col-md-12">

  <div class="text-center">
    <div class="row">
        <%= will_paginate @dogs, :page_links => true ,class: "apple_pagination"%>
    </div>
  </div>



<table class="bootstrap-table">
  <thead>
    <tr>
      <th class="text-center" data-valign="middle">Raça</th>
      <th class="text-center" data-valign="middle">Gênero</th>
      <th class="text-center" data-valign="middle">Castrado?</th>
      <th class="text-center" data-valign="middle">Data de Nascimento</th>
      <th class="text-center" data-valign="middle">Nome</th>
      <th class="text-center" data-valign="middle">Nome do dono</th>
      <th class="text-center" data-valign="middle">Telefone do dono</th>
      <th class="text-center" data-valign="middle">Ultima visita</th>
      <th class="text-center"  colspan="3" data-valign="middle"></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td><%= dog.breed %></td>
        <td><%= dog.genre %></td>
          
        <%if dog.castrated == true%>
          <td>  Sim </td>

          <%else%> 

          <td> Não </td>

        <% end %>

        <td><%= l dog.birthday %></td>
        <td><%= dog.name %></td>
        <td><%= dog.owner_name %></td>
        <td><%= dog.owner_fone %></td>
        <td><%= l dog.last_date %></td>
        <td><%= link_to dog do%>
          <i class="fa fa-eye"></i>
          <% end %>
        </td>

        <td><%= link_to edit_dog_path(dog) do%>
          <i class="fa fa-edit"></i>
          <% end %>
        </td>
        
        <td><%= link_to dog, method: :delete, data: { confirm: 'Vc tem certeza?' } do%>
            
          <i class="fa fa-close"></i>

          <% end %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
</div>
<%= link_to 'Novo Cachorro', new_dog_path ,:class =>'btn btn-success'%>
</div>
</div>

