<p id="notice"><%= notice %></p>
<div class="box box-default">
<div class="box-header with-border">
    <h3 class="box-title">
      <strong>
       Dogs Cadastred
      </strong>
    </h3>
</div>

  <div class="box-body">

    <%= simple_form_for dogs_path, method: "get" ,class: "form-inline" do |f| %>
  <div class="row">

    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">

        <%= f.input :breed,required: false, collection: @breeds, label_method: :name, value_method: :id, input_html: {value: params[:breed], name: 'breed'}, prompt: "Breeds [All]" %>

    </div>

    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
      <%= f.input :name, required: false,input_html: {value: params[:name], name: 'name', placeholder: "Name", id: "name"}  %>
    </div>

    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
      <%= f.input :owner_name, required: false,input_html: {value: params[:owner], name: 'owner', placeholder: "owner", id: "owner"}  %>
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-right">

      <%= f.submit "Search",class: "btn btn-primary btn-sm"%>
    </div>


  </div>
<% end %>


&nbsp;
<div class="row">
<div class="col-md-12">

  <div class="text-center">
    <div class="row">
        <%= will_paginate @dogs, :page_links => true ,class: "apple_pagination"%>
    </div>
  </div>



<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Breed</th>
      <th>Genre</th>
      <th>Castrated?</th>
      <th>Birthday</th>
      <th>Name</th>
      <th>Owner's name</th>
      <th>Owner's fone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td><%= dog.breed.name %></td>
        <td><%= dog.genre %></td>
          
        <%if dog.castrated == true%>
          <td>  Sim </td>

          <%else%> 

          <td> NÃ£o </td>

        <% end %>

        <td><%= l dog.birthday %></td>
        <td><%= dog.name %></td>
        <td><%= dog.owner_name %></td>
        <td><%= dog.owner_fone %></td>
        <td><%= link_to dog do%>
          <i class="fa fa-eye"></i>
          <% end %>
        </td>

        <td><%= link_to edit_dog_path(dog) do%>
          <i class="fa fa-edit"></i>
          <% end %>
        </td>
        
        <td><%= link_to dog, method: :delete, data: { confirm: 'are you right?' } do%>
            
          <i class="fa fa-close"></i>

          <% end %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
</div>
<%= link_to 'New Dog', new_dog_path ,:class =>'btn btn-success'%>
</div>
</div>

