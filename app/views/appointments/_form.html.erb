
<%= simple_form_for @appointment, class: "form-horizontal" do |f| %>

    <% if appointment.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(appointment.errors.count, "error") %> errors :</h2>
        <ul>
        <% appointment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

  <div class="row">
  <div class="col-md-8">

  <div class="form-group">
    <%= f.label :appointment_date ,'Date'%>
    <%= f.date_field :appointment_date ,{ class: 'form-control' }%>
  </div>

  <div class="form-group">
    <%= f.label :dog ,'Dogs'%>
    <%= f.association :dog , {label: false, class: 'form-control' }%>
  </div>

  <div class="form-group">
    <%= f.label :disease ,'Diseases'%>
    <%= f.association :disease , {label: false, class: 'form-control' }%>
  </div>

  <div class="form-group">
    <%= f.label :description ,'Description'%>
    <%= f.text_field :description ,{ class: 'form-control' }%>
  </div>

  <div class="actions">
    <%= f.submit 'Add' , :class => 'btn btn-primary btn-sm'%>
  </div>

<% end %>

</div>
</div>