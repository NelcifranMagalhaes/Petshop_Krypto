
<p id="notice"><%= notice %></p>
<div class="box box-default">
<div class="box-header with-border">
    <h3 class="box-title">
      <strong>
       Diseases
      </strong>
    </h3>
</div>

<div class="row">
<div class="col-md-12">

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
       <% @diseases.each do |disease| %>
      <tr>
        <td><%= disease.name %></td>
        <td><%= disease.description %></td>

        <td><%= link_to disease do%>
          <i class="fa fa-eye"></i>
          <% end %>
        </td>

        <td><%= link_to edit_disease_path(disease) do%>
          <i class="fa fa-edit"></i>

        <% end %>
        </td>

        <td><%= link_to disease, method: :delete, data: { confirm: 'Are you sure?' } do%>
          
          <i class="fa fa-close"></i>

          <% end %>
        </td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
</div>
  <%= link_to 'New disease', new_disease_path ,:class =>'btn btn-success'%>
</div>
</div>
