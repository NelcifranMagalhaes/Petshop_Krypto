
<p id="notice"><%= notice %></p>
<div class="box box-default">
<div class="box-header with-border">
    <h3 class="box-title">
      <strong>
       Breeds Cadastred
      </strong>
    </h3>
</div>

<div class="box-body">
    <%= search_form_for @q do |f| %>

      <div class="form-group">
        <%= f.search_field :name_cont, input_html: { class: 'form-control' }, placeholder: 'Breed Name' %>
      </div>

      <div class="form-group">
        <%= f.search_field :characteristics_cont, input_html: { class: 'form-control' }, placeholder: 'Breed characteristics'%>
      </div>

      <%= f.submit "Search",class: "btn btn-primary btn-sm"%>
  </div>
<% end %>

<div class="row">
<div class="col-md-12">

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Characteristics</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
       <% @breeds.each do |breed| %>
      <tr>
        <td><%= breed.name %></td>
        <td><%= breed.characteristics %></td>

        <td><%= link_to breed do%>
          <i class="fa fa-eye"></i>
          <% end %>
        </td>

        <td><%= link_to edit_breed_path(breed) do%>
          <i class="fa fa-edit"></i>

        <% end %>
        </td>

        <td><%= link_to breed, method: :delete, data: { confirm: 'Are you sure?' } do%>
          
          <i class="fa fa-close"></i>

          <% end %>
        </td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
</div>
<%= link_to 'New Breed', new_breed_path ,:class =>'btn btn-success'%>
</div>
</div>
